<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:id="@+id/scrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="API 测试工具"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试服务器连接和数据接口"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="连接测试"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnTestConnection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试服务器连接"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/btnGetProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取商品列表"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#2196F3" />

        <Button
            android:id="@+id/btnGetProductDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取商品详情 (ID: 1)"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FF9800" />

        <Button
            android:id="@+id/btnTestLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试登录"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#9C27B0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试日志"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnClearLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清空日志"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#F44336" />

        <TextView
            android:id="@+id/tvLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:text="等待测试..."
            android:textSize="12sp"
            android:textColor="#333333"
            android:fontFamily="monospace"
            android:minHeight="300dp"
            android:scrollbars="vertical" />

    </LinearLayout>

</ScrollView>
